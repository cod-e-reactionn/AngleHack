<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mhkz.loginandsignup.Second_Activity"
    android:background="@color/white"
    >


    <ImageView

        android:id="@+id/addd"
        android:layout_width="230dp"
        android:layout_height="245dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="advertiser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184"
        app:srcCompat="@drawable/slide2"
        tools:ignore="MissingConstraints,OnClick" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/pram"
        app:layout_constraintTop_toTopOf="@+id/addd"
        app:layout_constraintVertical_bias="0.546"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

    </View>

    <ImageView
        android:id="@+id/pram"
        android:layout_width="230dp"
        android:layout_height="245dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="promoter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/slide4"
        tools:ignore="MissingConstraints,OnClick" />
</android.support.constraint.ConstraintLayout>
