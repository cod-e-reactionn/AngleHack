<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.mhkz.loginandsignup.mumbai">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Showing all Mumbai promoters"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"

        android:background="#8c8c8c">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/sid_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="11dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:text="Siddharth Mohite"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:paddingTop="10dp"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Youtube"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/yt"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sidImg"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="hello_world"
                        android:layout_marginTop="24dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/sidCircle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/sidd" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/param_info"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="11dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="1dp"
                        android:text="Param Jaiswal"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:paddingTop="10dp"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:text="Twitter"
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/twitter"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="60dp"
                            android:src="@drawable/star"/>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/paramimageView"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="hello_world"
                        android:layout_marginTop="24dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/paramcircleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/paramimageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/param" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>
